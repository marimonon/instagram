<div class="container form-group text-center m-container">
    <div class="row">
      <div class="col-sm-6 hidden-xs">
        <div class="m-bg-image-phone">
          <%= image_tag "image1.jpg", :width => '200' %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 center-block text-center">
        <div class="m-toppage-right center-block">
          <div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div>
              <%= image_tag "instagram_title.png", :width => '150' %>
            </div><br />
            
            <div class="field text-left form-group">
              <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス", class: "form-control", autocomplete: "off" %>
            </div>
          
            <div class="field text-left form-group">
              <%= f.label :password, "パスワード" %>
              <%= link_to "パスワードを忘れた場合", new_password_path(resource_name) %><br />
              <%= f.password_field :password, placeholder: "パスワード", class: "form-control", autocomplete: "off" %>
            </div>
          
            <% if devise_mapping.rememberable? %>
              <div class="field text-left form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "次回から自動でログイン" %>
              </div>
            <% end %>
          
            <div class="actions text-center form-group">
              <%= f.submit "ログイン" %>
            </div>
            <% end %>
            
            <p class="text-center">または</p>
          
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Facebookでログイン", omniauth_authorize_path(resource_name, provider) %><br />
            <% end %> 
          </div>
          <div>
            <p class="devise-link">
              アカウントをお持ちでないですか？
              <%= link_to "登録する", new_registration_path(resource_name) %><br />
            </p>
          </div>
          <div>
            <p>ダウンロード</p>
            <ul class="m-topppage-tag">
              <li><%= image_tag "appstore_link.png", :width => '200' %></li>
              <li><%= image_tag "googleplay_link.png", :width => '200' %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'devise/shared/footer' %>
