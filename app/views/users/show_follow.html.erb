<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <%= image_tag avatar_url(@user), class: "rounded-circle", :size =>'60x60' %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><b>投稿</b> <%= @user.posts.count %></span>
    </section>
  </aside>
  <div class="col-md-6">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %> 
        <hr>
        <div class="d-flex">
        <%= image_tag avatar_url(user), class: "rounded-circle", :size =>'40x40' %>
        <h4><%= link_to user.name, user_path(user) %></h4>
        <% end %>
        <div>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
